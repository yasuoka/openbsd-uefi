PROG=	gdisk
SRCS=	gdisk.c user.c misc.c disk.c gpt.c part.c cmd.c manual.c
DPADD=	${LIBUTIL}
LDADD=	-lutil -lz
CLEANFILES += gdisk.cat8 manual.c

.include <bsd.own.mk>

.ifdef NOMAN
manual.c:
	(echo 'const unsigned char manpage[] = {'; \
	echo 'no manual' | gzip -9c | hexdump -ve '"0x" 1/1 "%02x,"'; \
	echo '};'; echo 'const int manpage_sz = sizeof(manpage);') > manual.c
.else
gdisk.cat8:	gdisk.8
	mandoc ${.ALLSRC} > ${.TARGET}

manual.c:	gdisk.cat8
	(echo 'const unsigned char manpage[] = {'; \
	cat gdisk.cat8 | gzip -9c | hexdump -ve '"0x" 1/1 "%02x,"'; \
	echo '};'; echo 'const int manpage_sz = sizeof(manpage);') > manual.c
.endif

MAN=	gdisk.8

.if ${MACHINE} == "amd64"
CFLAGS += -DHAS_GPT
.endif

.include <bsd.prog.mk>
